<view class="index-hot" style="background:{{item.bg_color}}">
    <view class="weui-flex">
        <view class="flex-head-item item-hotdot">
            <image class="hotdot" src="{{item.imgurl}}"></image>
        </view>
        <view class="weui-flex__item">
            <swiper autoplay="true" circular="{{circularHot}}" class="index-adcs-sqiper index-notification-swiper" duration="{{durationHot}}" indicatorDots="{{indicatorDotsHot}}" interval="{{intervalHot}}">
                <swiper-item class="scroll_view_border">
                    <view class="notification-navigoter srcoll_view" hoverClass="none" style="color:{{item.color}}">{{item.title}}</view>
                </swiper-item>
            </swiper>
        </view>
    </view>
</view>
