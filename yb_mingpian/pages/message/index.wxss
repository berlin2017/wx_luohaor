@import "../../../__wuBaseWxss__/3.wxss";

.pop_bg {
    background: black;
    opacity: 0.5;
    width: 100%;
    height: calc(100vh - 3.5rem);
    z-index: 9999999999;
    position: fixed;
    top: 0;
    left: 0;
}

.page_b_comment_box {
    height: 3.5rem;
    background: #f0f0f0;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 99999999999999999;
}

.page_b_comment {
    position: relative;
}

.page_b_comment button {
    width: 150rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #009dda;
    border-radius: 8rpx;
    text-align: center;
    position: absolute;
    top: 16rpx;
    right: 20rpx;
    z-index: 99999999999;
}

.page_b_comment button text {
    color: #fff;
    font-size: 28rpx;
}

.page_b_comment input {
    height: 2.8rem;
    line-height: 2.8rem;
    width: 65%;
    border-bottom: 1px solid #009dda;
    margin-left: 20rpx;
    font-size: 30rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.list_info_count_btn {
    width: 320rpx;
    height: 80rpx;
    background: #4c5254;
    border-radius: 8rpx;
    position: absolute;
    right: 80rpx;
    top: 0rpx;
    justify-content: center;
    display: flex;
}

.list_info_count_btn_li {
    width: 50%;
    text-align: center;
    justify-content: center;
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
}

.list_info_count_btn_li image {
    width: 44rpx;
    height: 44rpx;
    margin-top: 18rpx;
}

.list_info_count_btn_li text {
    font-size: 26rpx;
    color: #fff;
    display: block;
    height: 44rpx;
    margin-left: 6rpx;
}

.list_info_count_btn_li:nth-child(3),.list_info_count_btn_li:nth-child(2) {
    border-left: 1px solid rgba(0,0,0,0.5);
}

.pop_bg_box {
    background: rgba(0,0,0,0.5);
    opacity: 0;
    width: 100%;
    height: 100vh;
    z-index: 999999999;
    position: fixed;
    top: 0;
    left: 0;
}

.none_info_box {
    width: 100%;
    height: 100vh;
    text-align: center;
}

.none_info_box .none_pic {
    width: 400rpx;
    height: 400rpx;
}

.none_info_box .none_text {
    font-size: 30rpx;
    display: block;
    text-align: center;
    height: 140rpx;
    line-height: 140rpx;
    color: #ccc;
}