@import "../../../__wuBaseWxss__/3.wxss";

.card_box {
    background: rgba(0,0,0,0.6);
    height: 50rpx;
    width: 140rpx;
    position: absolute;
    top: 14rpx;
    left: -60rpx;
    border-radius: 25rpx;
    text-align: right;
    z-index: 999999999999;
}

.card_box image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 26rpx;
    margin-top: 6rpx;
}

.wxParse-img {
    width: 100%;
}

.wxParse-p .WxEmojiView {
    font-size: 28rpx;
    line-height: 56rpx;
}

.card_bg {
    width: 100%;
    height: 400rpx;
}

.user_face_more {
    display: inline-block;
    width: 50rpx;
    height: 50rpx;
    color: #666;
    font-size: 28rpx;
}

.pop_bg {
    width: 100%;
    height: 100vh;
    background: rgba(0,0,0,0.6);
    position: fixed;
    z-index: 999999;
}

.share_btn_cancel {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    border-top: 12rpx solid #efefef;
}

.share_btn_cancel text {
    font-size: 32rpx;
    color: #414141;
}

.share_box {
    width: 100%;
    height: 400rpx;
    background: #fff;
    position: fixed;
    z-index: 9999999999;
    bottom: 0;
    left: 0;
}

.share_li_box {
    justify-content: space-between;
    display: flex;
    width: 60%;
    margin: 0 auto;
    height: 280rpx;
    position: relative;
    z-index: 999999999999999;
}

.share_li_box .share_li {
    width: 120rpx;
    height: 120rpx;
    background: #44c55d;
    border-radius: 50%;
    text-align: center;
    line-height: 120rpx;
    margin-top: 60rpx;
}

.share_li_box .share_li image {
    width: 80rpx;
    height: 80rpx;
}

.share_li_box .share_li text {
    font-size: 26rpx;
    color: #414141;
    display: block;
    height: 60rpx;
    line-height: 60rpx;
}