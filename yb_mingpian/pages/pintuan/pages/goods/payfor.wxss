@import "../../app.wxss";
.top_header{
  height: 210rpx;
  color: white;
  width: 100%;
  background: #ff7900;
  line-height: 20px;
  font-size: 15px;
  text-align: center;
}

.top_view{
  height:100%;
display:flex;
align-items:center;
justify-content:center;

}

.top_header_image{
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.no-address image {
    width: 21pt;
    height: 21pt;
    margin-right: 12pt;
    margin-left: 12pt;
}

.no-address text {
    font-size: 12pt;
    color: #3f3f3f;
}

.no-address>.add-by-user {
    height: 45pt;
}

.no-address image.left {
    width: 24rpx;
    height: 48rpx;
    margin-right: 12pt;
    margin-top: 10pt;
}

.no-address .add-by-user,.no-address .add-by-wx {
    line-height: 90rpx;
}

.add-by-wx {
    border-top: 1px solid #ededed;
}

.address {
    height: 148rpx;
    padding: 20rpx 24rpx;
    color: #3F3F3F;
    margin-top:10px;
    margin-bottom: 10px;
}

.address_name{
  width: 80px;
}

.name-input{
  padding-bottom: 5px;
  padding-top: 5px;
  background: gainsboro;
  padding-left: 10dp;
}

.rule-layout{
  margin-top: 10px;
  background: white;
  display:flex;
flex-direction:column;
padding: 10px;
}

.rule_title{
  line-height: 30px;
  font-size: 17px;
  font-weight: 700;
}

.rule_info{
   line-height: 26px;
   margin-top: 8px;
  font-size: 15px;
}

.address image.pull-left {
    width: 36rpx;
    height: 44rpx;
}

.address image.pull-right {
    width: 12rpx;
    height: 24rpx;
    margin-right: 24rpx;
}

.address-top .add-name {
    font-weight: bold;
    font-size: 12pt;
    height: 40rpx;
    line-height: 40rpx;
}


.address-info {
    margin-left: 28rpx;
    font-size: 12pt;
    color: #3F3F3F;
}

.goods-item {
    background-color: #f8f8f8;
    padding-right: 12pt;
}

.goods-item image {
    width: 180rpx;
    height: 180rpx;
    margin: 8pt 12pt;
}

.goods-info {
    margin-top: 17pt;
}

.goods-title {
    line-height: 32rpx;
    font-size: 12pt;
    color: #3F3F3F;
}

.goods-property {
    margin-top: 29pt;
}

.goods-item .goods-price {
    font-size: 12pt;
    color: #fd4b49;
    text-align: right;
}

.goods-spec {
    color: #A4A4A4;
    font-size: 10pt;
}

.goods-spec>text {
    margin-right: 22rpx;
}


.footer {
    background-color: #fff;
    position: fixed;
    bottom: 0;
    text-align: right;
    height: 110rpx;
    width: 100%;
}

.footer .goods-price {
    font-size: 12pt;
    color: #e02e24;
}

.footer .btn {
    color: #fff;
    background-color: #fd4b49;
    font-size: 34rpx;
    width: 200rpx;
    line-height: 100rpx;
    border: 0!important;
}

.footer-title {
    text-align: right;
    font-size: 11pt;
    color: #3F3F3F;
    margin-left: 24rpx;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    background-color: #000;
    opacity: 0.3;
    overflow: hidden;
}

.buy-num-text {
    font-size: 12pt;
    color: #3F3F3F;
}

.buy-num-play {
    font-size: 11pt;
    color: #3F3F3F;
}

.freight {
    height: 96rpx;
    background-color: #ffffff;
    color: #3F3F3F;
    font-size: 12pt;
    margin-top: 20rpx;
    padding: 0 24rpx;
}

.freight-title {
    width: 160rpx;
}